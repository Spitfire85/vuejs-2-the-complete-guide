<!DOCTYPE html>
<!--[if IE 9]>         <html class="no-js ie-9" lang="en"> <![endif]-->
<!--[if gt IE 9]><!-->
<html class="no-js" lang="en">
<!--<![endif]-->

<head>
  <!-- @include html-partials/global/_head -->
  <title>Exercise 2</title>
  <script src="https://cdn.jsdelivr.net/npm/vue@2.6.0"></script>
</head>

<body>
  <!-- @include html-partials/global/_header -->
  <main>

    <div id="exercise">
      <!-- 1) Show an alert when the Button gets clicked -->
      <div>
        <button v-on:click="alertMe">Show Alert</button>
      </div>
      <!-- 2) Listen to the "keydown" event and store the value in a data property (hint: event.target.value gives you the value) -->
      <div>
        <input v-on:keyDown="updateValue" type="text">
        <p>{{ value }}</p>
      </div>
      <!-- 3) Adjust the example from 2) to only fire if the "key down" is the ENTER key -->
      <div>
        <input v-on:keyDown.enter="updateValue" type="text">
        <p>{{ value }}</p>
      </div>
    </div>
    <script>
      new Vue({
        el: '#exercise',
        data: {
          value: ''
        },
        methods: {
          alertMe: function () {
            alert('Alert!');
          },
          updateValue: function () {
            this.value = event.target.value;
          }
        }
      });
    </script>
  </main>
  <!-- @include html-partials/global/_footer -->
</body>

</html>